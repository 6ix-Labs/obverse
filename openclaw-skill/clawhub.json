{
    "name": "obverse-payments",
    "displayName": "Obverse Payments",
    "version": "1.0.0",
    "description": "Complete stablecoin payment solution for AI agents - invoices, products, and crowdfunding on Solana/Monad",
    "author": {
        "name": "Obverse Team",
        "email": "support@obverse.app",
        "url": "https://obverse.app"
    },
    "repository": "https://github.com/obverse/openclaw-skill",
    "homepage": "https://obverse.app",
    "license": "MIT",
    "category": "payments",
    "tags": [
        "payments",
        "crypto",
        "usdc",
        "base",
        "monad",
        "solana",
        "web3"
    ],
    "platforms": [
        "telegram",
        "whatsapp",
        "discord",
        "signal"
    ],
    "requires": {
        "openclaw": ">=1.0.0",
        "bins": [
            "curl",
            "jq"
        ]
    },
    "setup": {
        "requiresApiKey": true,
        "apiKeyUrl": "https://obverse.app/api-keys",
        "envVars": {
            "OBVERSE_API_KEY": {
                "required": true,
                "description": "Your Obverse API key (get one from https://obverse.app/api-keys or use the register endpoint)"
            },
            "OBVERSE_API_URL": {
                "required": false,
                "default": "https://obverse.onrender.com",
                "description": "Obverse API base URL"
            }
        }
    },
    "screenshots": [
        "https://obverse.app/screenshots/openclaw-telegram.png",
        "https://obverse.app/screenshots/openclaw-payment.png"
    ],
    "pricing": {
        "free": {
            "transactions": 100,
            "fee": "1.5%"
        }
    }
}